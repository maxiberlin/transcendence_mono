{
    "compileOnSave": false,
    "compilerOptions": {
        "noEmit": true,
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "strict": true,
        "module": "ESNext",
        "target": "ES2020",
        "declarationDir": "./types",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "types": [
            "vitest/globals"
        ],
    },
    "paths": {
        "*": [
            "node_modules/*"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist"
    ]
}