{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "checkJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist",
        "public",
    ]
}